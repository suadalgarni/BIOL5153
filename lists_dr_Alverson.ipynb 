    "# open and read the file \n",
    "filename= 'blood_on_the_tracks.txt'\n",
    "infile = open(filename, 'r')\n",
    "\n",
    "# declare our list \n",
    "songs = []\n",
    "\n",
    "# read each line into a list \n",
    "for line in infile:\n",
    "    line = line.strip('\\n')\n",
    "    songs.append(line)\n",
    "    \n",
    "# close the file\n",
    "infile.close()"
   ]
  },
  {
