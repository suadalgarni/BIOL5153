    "\n",
    "\n",
    "# count the tracks\n",
    "track_num = 1\n",
    "\n",
    "for track in songs:\n",
    "    print(str(track_num) + '.', track)\n",
    "    track_num += 1\n",
    "    \n",
    "# print number of songs\n",
    "print(\"\\n\")\n",
    "\n",
    "print(\"There are\", len(songs), \"songs on\", filename)"
